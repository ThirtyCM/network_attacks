#!/usr/sbin/nft -f

table ip basic_firewall {

    #Chain INPUT
    chain input {
        type filter hook input priority 0; policy drop;

        ct state {new,established} accept
    }

    #Chain OUTPUT
    chain output {
        type filter hook output priority 0; policy accept;

        ip daddr 10.1.0.0/24 drop
    }
}